<%= simple_form_for(@job, html: {class: 'form-horizontal'}) do |form| %>
<%=  form.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a category"}, input_html: { class: "dropdown-toggle"}%>
  <%= form.input :title, label: "Job title", input_html: { class: "form-control" }, input_html: { class: "form-control"} %>
  <%= form.input :company, label: "Your company", input_html: { class: "form-control", input_html: { class: "form-control"} } %>
  <%= form.input :url, label: "Link to job", input_html: { class: "form-control", input_html: { class: "form-control"} } %>
  <br>
  <%= form.button :submit, class: "btn btn-default"  %>
<% end %>
