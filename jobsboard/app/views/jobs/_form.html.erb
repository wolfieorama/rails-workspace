<%= simple_form_for(@job, html: {class: 'form-horizontal'}) do |form| %>
  <%= form.input :title, label: "Job title", input_html: { class: "form-control" } %>
  <%= form.input :company, label: "Your company", input_html: { class: "form-control" } %>
  <%= form.input :url, label: "Link to job", input_html: { class: "form-control" } %>
  <br>
  <%= form.button :submit %>
<% end %>
